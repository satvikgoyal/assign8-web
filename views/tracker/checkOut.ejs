<%- include("../partials/header") %>

<div class="checkout-card card mb-3 mx-auto" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="/images/profile.svg" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= user.name %></h5>
          <p class="card-text"><%= user.email %></p>
          <p class="card-text"><small class="text-muted"><%= user.phone %></small></p>
          <form action="/checkout/<%=user._id%>?_method=PATCH" method="POST">
              <button type="submit" class="btn btn-sm btn-danger">Check Out</button>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include("../partials/header") %>
